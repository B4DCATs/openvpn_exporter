# OpenVPN Prometheus Exporter v2.0 - Environment Variables

# Server Configuration
LISTEN_ADDRESS=:9176
TELEMETRY_PATH=/metrics

# OpenVPN Configuration
STATUS_PATHS=/var/log/openvpn/server.status,/var/log/openvpn/client.status
IGNORE_INDIVIDUALS=false

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_WINDOW=60
MAX_REQUESTS_PER_WINDOW=100

# File Security
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Allowed directories for status files (comma-separated)
ALLOWED_DIRS=/var/log/openvpn,/etc/openvpn,/tmp/openvpn,./examples
